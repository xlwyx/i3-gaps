# Automatically starting applications on i3 blocks
exec_always picom -cCGf
exec_always feh --bg-scale ~/Pictures/piccas_img/videoblocks-animation-of-infinity-time-clock-infinity-life-concept-digital-generated.png
exec_always ~/./pipewire-pulse

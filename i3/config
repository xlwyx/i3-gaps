#exec_always xrdb ~/.Xresources

# Don't change focus with mouse
focus_follows_mouse no

# Focus fullscreen mode
popup_during_fullscreen smart

# Drawing mark on window decoration
show_marks yes

# Mouse Warping
mouse_warping none

# gaps
for_window [class="^.*"] borders pixel 3
new_window pixel 2
gaps inner 7
gaps outer 7
smart_gaps on
hide_edge_borders both

# fibonacci layout
default_orientation vertical              #start in opposite orientation from your monitor
for_window [class=".*"] split toggle      #toggles split at each new window
bindsym $m+Shift+e layout toggle split  #should already exist but use if split orientation  messes up


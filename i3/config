for_window [class="thonny"] move to workspace $ws1 border pixel 3
for_window [class="Thunar"] move to workspace $ws5 floating enable border pixel 5
for_window [class="Notepadqq"] floating enable default_orientation horizontal border pixel 3
for_window [class="qpwgraph"] floating enable border pixel 4
for_window [class="fcitx-config-gtk3"] floating enable border pixel 4
#for_window [class="PacketTracer"] move to workspace $ws3 border pixel 4
for_window [class="Zathura"] move to workspace $ws5 floating enable border pixel 2
for_window [class="Soffice"] move to workspace $ws5 border pixel 4
for_window [class="Thunderbird"] move to workspace $ws3 floating enable border pixel 3
for_window [class="Telegram"] move to workspace $ws3 floating enable border pixel 4
for_window [class="Signal"] move to workspace $ws3 floating enable border pixel 4
for_window [class="gnome-mahjongg"] move to workspace $ws6 floating enable border pixel 3
for_window [class="lbreakout2"] move to workspace $ws6 floating enable border pixel 3
for_window [class="lxappearance"] floating enable border pixel 2
for_window [class="Pavucontrol"] floating enable border pixel 3
for_window [class="Gimp"] move to workspace $ws4

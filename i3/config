# Keybinding for i3lock
bindsym $mod+Shift+g exec i3lock

# Display screenshot
bindsym --release $mod+Shift+c exec dbus-launch ~/./screenshot

# Focus follow mouse
focus_follows_mouse no

# Mouse warping
mouse_warping output

# Popup during fullscreen
popup_during_fullscreen smart

# Disable focus wrapping
focus_wrapping no

# Assign programs to workspaces
for_window [class="firefox"] move to workspace $ws1 tiling enable borders normal 2
for_window [class="firefox Dialog"] move to workspace $ws1 floating enable borders normal 2
for_window [class="Thunar"] move to workspace $ws4 floating enable borders normal 3
for_window [class="Thunderbird"] move to workspace $ws2 floating enable borders normal 3
for_window [class="Mousepad"] floating enable borders normal 3
for_window [class="URxvt"] move to workspace $ws3 tiling enable border pixel 2
for_window [class="Pavucontrol"] floating enable border pixel 3
for_window [class="qpwgraph"] floating_modifier enable border pixel 3
for_window [class="Gimp"] move to workspace $ws5 floating enable borders normal 4
for_window [class="Inkscape"] move to workspace $ws5 fullscreen enable borders normal 4
for_window [class="OpenOffice 4.1.14"] move to workspace $ws4 floating enable borders normal 4
for_window [class="Zathura"] move to workspace $ws4 fullscreen enable borders normal 3
for_window [class="Mgba-qt"] move to workspace $ws7 floating enable borders normal 6
for_window [class="Stella"] move to workspace $ws7 floating enable borders normal 4
for_window [class="Lxappearance"] move to workspace $ws1 floating enable borders normal pixel 3
for_window [class="Signal"] move to workspace $ws2 floating enable borders normal 3
for_window [class="TelegramDesktop"] move to workspace $ws2 floating enable borders normal 3
for_window [class="whatsdesk"] move to workspace $ws2 floating enable borders normal 3
for_window [class="mpv"] floating enable borders normal 4
for_window [class="vlc"] move to workspace $ws6 borders normal 2
for_window [class="fcitx5-config-gtk3"] floating enable borders pixel 4
for_window [class="System-config-printer.py"] floating enable borders pixel 5

# Automatically starting applications in i3blocks
exec_always setxkbmap es
exec_always picom -fFCG
exec_always feh --bg-scale ~/Pictures/piccas_img/Linux-GNU-GNU_Linux.jpg
exec_always ~/./pipewire-pulse
exec_always xscreensaver -nosplash
exec_always fcitx -s 3
exec_always rxdb ~/.Xsources

# Gaps
for_window [class="^.*"] borders pixel 6
new_window pixel 7
gaps inner 9
gaps outer 9
smart_gaps on
hide_edge_borders both

# Fibonacci layout
default_orientation vertical #start in opposite orientation from your monitor
for_window [class=".*"] split toggle #toggles split at each new window
bindsym $mod+Shift+e layout toggle split # should already exist but use if split orientation  messes up

